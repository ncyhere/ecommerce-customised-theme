      {% for variant in product.variants %}
        <input onfocus="this.select()" id="q-{{ variant.id }}-{{row_id}}" class="quantity-field" min="0" {% unless variant.inventory_management == blank or variant.inventory_policy == 'continue' %} maximum="{{ variant.inventory_quantity }}" {% endunless %} type="number" value="0" />
        <div class="quantity-field" id="qem-{{ variant.id }}-{{row_id}}">
          <span class="order-form__tablecell--popuptext" style="display:none;">{{ 'order_form.we_only_have' | t }} {{ variant.inventory_quantity }} {{ 'order_form.this_item_in_stock' | t }}</span>
        </div>
      {% endfor %}